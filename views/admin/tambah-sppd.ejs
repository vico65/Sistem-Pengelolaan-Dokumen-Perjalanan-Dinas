<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title><%= title  %></title>

   <!-- connect ke font -->
   <link rel="preconnect" href="https://fonts.googleapis.com" />
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
   <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      rel="stylesheet" />
   <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet" />
   <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&display=swap" rel="stylesheet">

   <!-- connect ke icon bootsrap -->
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.1/font/bootstrap-icons.css" />

   <!-- connect ke resource public  -->
   <link rel="shortcut icon" type="image/x-icon" href="../img/logo.png" />
   <link rel="stylesheet" href="../style/output.css" />
</head>

<body class="dark:bg-slate-800 overflow-x-hidden overflow">
   <div class="container ">

      <!-- navbar -->
      <header class="w-screen  h-14 fixed z-20 dark:bg-slate-900 bg-coklat1 shadow-md flex gap-2 px-3">
         <button role="button" id="button_list_sidebar" class="sm:hidden">
            <i id="icon_list_sidebar" class="bi bi-list text-3xl self-center dark:text-slate-300"></i>
         </button>

         <div class="flex gap-2">
            <img src="../img/logo.png" alt="logo_dprd" class="w-9 h-9 self-center dark:hidden" />
            <h1
               class="h-fit font-inter font-semibold self-center text-slate-100 dark:font-semibold dark:text-slate-300">
               DPRD Sumsel
            </h1>
         </div>

         <div class="flex gap-2 self-center ml-auto mr-4  ">
            <div class="flex gap-3 self-center text-slate-100 ">
               <img src="../img/user_image/<%= employee.image %>" alt="profil_image"
                  class="w-7 h-7 self-center rounded-full dark:hidden" />
               <p class="font-medium "><%= employee.nama %></p>
            </div>
         </div>
      </header>

      <!-- sidebar -->
      <nav id="sidebar"
         class="bg-coklat3 top-14 z-10  dark:bg-slate-900 w-2/5 sm:w-52 shadow-xl h-screen fixed sm:ml-0 transition-all duration-200 -ml-96 ">
         <div class="font-montserrat">
            <h3 class="font-bold text-lg px-2 pt-4 ">Menu</h3>

            <ul class="text-left text-black dark:text-slate-400 font-normal leading-7 text-sm mt-2 ">
               <li
                  class="hover:text-white hover:bg-coklat1 hover:py-1 pl-4 ">
                  <a href="/" class="inline-block w-full"><i class="bi bi-house-door"></i> Halaman Depan</a>

               </li>
               <li class=" text-coklat2 font-semibold dark:hover:bg-sky-900  dark:hover:text-slate-300  pl-4">
                  <i class="bi bi-file-earmark-text-fill"></i> SPPD
               </li>

               <ul
                  class="text-left leading-6 text-xs">
                  <li
                     class="cursor-pointer hover:text-white hover:bg-coklat1 hover:py-1 pl-8">
                     <a href="/sppd" class="inline-block w-full">Daftar SPPD</a>
                  </li>
                  <li
                     class="font-semibold text-coklat2 pl-8">
                     Tambah SPPD
                  </li>
               </ul>

               <li
                  class="hover:text-white hover:bg-coklat1 hover:py-1 pl-4">
                   <a href="/kwitansi" class="inline-block w-full"><i class="bi bi-envelope-paper"></i> Kwitansi</a>
               </li>

               <li
                  class="hover:text-white hover:bg-coklat1 hover:py-1 pl-4">
                  <a href="/berkas" class="inline-block w-full"><i class="bi bi-envelope-paper"></i> Berkas Perjadin</a>
               </li>
               <li 
                  class="hover:text-white hover:bg-coklat1 hover:py-1 pl-4">
                  <a href="/logout" class="inline-block w-full"><i class="bi bi-box-arrow-in-right"></i> Log Out</a>
               </li>
            </ul>

         </div>

         <div class="text-center text-[9px] dark:text-gray-500 text-gray-400 absolute bottom-3 px-3">
            <p>DPRD Provinsi Sumatera Selatan </p>
         </div>
      </nav>

      <main class="w-screen h-screen  ">
         <section id="container_halaman" class=" p-5 relative top-14 sm:ml-52">

            <h1 class="text-inter font-semibold text-xl mb-4 dark:text-slate-300"><i class="bi bi-plus-circle-fill"></i>
               Tambah SPPD</h1>

            <form class="bg-white dark:bg-slate-900 w-[98%] p-3 shadow-md h-fit lg:h-3/4 " method="post"
               action="../sppd/add">

               <h3 class="text-inter font-semibold text-sm sm:text-base mb-3 text-red-900 dark:text-sky-700">
                  Data SPPD</h3>
               <div class=" grid lg:grid-cols-2 gap-3">

                  <div>

                     <table
                        class="border-collapse text-left sm:text-sm text-xs text-slate-700  dark:text-slate-400 font-nunito">
                        <tr class="">
                           <td class="px-1 py-2 font-bold">Pegawai</td>
                           <td>:</td>
                           <td class="pl-1 flex flex-row gap-2 justify-start items-center">
                              <select
                                 class="dark:bg-slate-800 dark:border-none border  py-2 focus:outline-none focus:ring-1 rounded-md focus:ring-coklat2 focus:border-coklat2 ml-1"
                                 name="nip" required>

                                 <% employees.forEach(e => { %>
                                 <option value="<%= e.nip %>"><%= e.nama %></option>
                                 <% }) %>
                              </select>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Maksud Perjalanan Dinas</td>
                           <td>:</td>
                           <td class="pl-1">
                              <textarea
                                 class="ml-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none resize lg:resize-y"
                                 cols="40" rows="7" name="maksud_perjadin" required></textarea>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Alat Angkut</td>
                           <td>:</td>
                           <td class="pl-1">
                              <select
                                 class="dark:bg-slate-800 dark:border-none border w-20  py-2 focus:outline-none focus:ring-1 rounded-md focus:ring-coklat2 focus:border-coklat2 ml-1"
                                 name="alat_angkut" required>
                                 <option>Pesawat</option>
                                 <option>Kapal</option>
                                 <option>Kendaraan Dinas / Umum</option>
                                 <option>Travel</option>
                                 <option>Kendaraan Pribadi</option>
                                 <option>KAI</option>
                                 <option>Lain-lain</option>
                              </select>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Tempat Berangkat</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none"
                                 type="text" value="Palembang" name="tempat_berangkat">
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Tempat Tujuan</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none"
                                 type="text" name="tempat_tujuan" required>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Tanggal Berangkat</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none"
                                 type="date" name="tanggal_berangkat" required>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Tanggal Kembali</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none"
                                 type="date" name="tanggal_kembali" required>
                           </td>
                        </tr>

                     </table>
                  </div>

                  <div>
                     <div class="mb-2">

                        <p class="text-sm font-nunito text-slate-700 font-bold pl-1 mb-1">Pengikut</p>

                        <div class="flex gap-2 mb-1">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none "
                              type="text" name="nama_pengikut1" placeholder="nama">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-20"
                              type="number" name="umur_pengikut1" placeholder="umur">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-32"
                              type="text" name="status_pengikut1" placeholder="status">
                        </div>

                        <div class="flex gap-2 mb-1">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none "
                              type="text" name="nama_pengikut2" placeholder="nama">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-20"
                              type="number" name="umur_pengikut2" placeholder="umur">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-32"
                              type="text" name="status_pengikut2" placeholder="status">
                        </div>

                        <div class="flex gap-2 mb-1">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none "
                              type="text" name="nama_pengikut3" placeholder="nama">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-20"
                              type="number" name="umur_pengikut3" placeholder="umur">
                           <input
                              class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-32"
                              type="text" name="status_pengikut3" placeholder="status">
                        </div>
                     </div>
                     <table
                        class="border-collapse text-left sm:text-sm text-xs text-slate-700  dark:text-slate-400 font-nunito mb-3">
                        <tr>
                           <td class="px-1 py-2 font-bold">No. Rekening</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-full"
                                 type="number" name="nomor_rekening" value="267865437687655" required>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Instansi</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none w-full"
                                 type="text" name="instansi" value="Sekretariat DPRD Prov. Sumsel" required>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Keterangan Lain </td>
                           <td>:</td>
                           <td class="pl-1">
                              <textarea
                                 class="ml-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none resize lg:resize-y"
                                 cols="40" rows="3" name="keterangan_lain"></textarea>
                           </td>
                        </tr>
                        <tr>
                           <td class="px-1 py-2 font-bold">Tanggal Tiba</td>
                           <td>:</td>
                           <td class="pl-1">
                              <input
                                 class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-coklat2 focus:border-coklat2 shadow-sm dark:bg-slate-800 dark:border-none"
                                 type="date" name="tanggal_tiba">
                           </td>
                        </tr>

                     </table>

                     <section class=" w-fit ">
                        <button type="submit" id="button-tambah-sppd"
                           class="px-2 py-1 mx-auto bg-coklat2 rounded-md shadow-md text-white font-inter font-normal text-sm mb-3 hover:bg-yellow-700 "><i
                              class="bi bi-plus"></i> Tambah dan Buat
                           Sppd </button>
                        <button type="submit" id="button-clear-form"
                           class="px-2 py-1 mx-auto bg-red-700 rounded-md shadow-md text-white font-inter font-normal text-sm mb-3 hover:bg-red-500 "><i
                              class="bi bi-trash-fill"></i> Clear Form </button>
                     </section>
                  </div>
               </div>
            </form>
         </section>
      </main>
   </div>
</body>

<script>
   const buttonClearForm = document.getElementById('button-clear-form')
   const form = document.querySelector('form')

   buttonClearForm.addEventListener('click', () => {
      form.reset()
   })
</script>

</html>