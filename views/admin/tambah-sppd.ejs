                        <h3 class="text-inter font-semibold text-sm sm:text-base mb-3 text-red-900 dark:text-sky-700">
                           Data SPPD</h3>

                        <table
                           class="border-collapse text-left sm:text-sm text-xs text-slate-700  dark:text-slate-400 font-nunito">
                           <tr>
                              <td class="px-1 py-2 font-bold">Pegawai</td>
                              <td>:</td>
                              <td class="pl-1">
                                 <input type="hidden" name="id_pegawai">
                                 <input
                                    class="ml-1 px-2 py-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-yellow-500 focus:border-yellow-500 shadow-sm dark:bg-slate-800 dark:border-none "
                                    type="text" value="user">
                              </td>
                           </tr>
                           <tr>
                              <td class="px-1 py-2 font-bold">Maksud Perjalanan Dinas</td>
                              <td>:</td>
                              <td class="pl-1">
                                 <textarea
                                    class="ml-1 border rounded-md border-slate-200  placeholder:text-slate-300 focus:outline-none focus:ring-1 focus:ring-yellow-500 focus:border-yellow-500 shadow-sm dark:bg-slate-800 dark:border-none resize lg:resize-y"
                                    cols="25" rows="5" name="maksud_perjadin"></textarea>
                              </td>
                           </tr>
                           <tr>
                              <td class="px-1 py-2 font-bold">Alat Angkut</td>
                              <td>:</td>
                              <td class="pl-1">
